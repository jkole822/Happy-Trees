<main>
    {{!-- Navbar --}}
    <nav>
        <div class="nav-wrapper">
            <a href="/" class='brand-logo fredericka'>
                Happy Trees
            </a>
            <a href="#" data-target="mobile-sidebar" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
                <li><a href="/auth/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    {{!-- Mobile Sidebar --}}
    <ul class="sidenav" id="mobile-sidebar">
        <li><a href="/auth/logout">Logout</a></li>
    </ul>

    {{!-- Content --}}
    {{#unless drawings}}
    <div class='row'>
        {{!-- Canvas --}}
        <div class="col s12">
            <h2 class='fredericka center-align'>Canvas</h2>
            <canvas id="myCanvas"></canvas>
        </div>
    </div>
    {{/unless}}

    {{#if drawings}}
    <div class='row'>
        {{!-- Drawing List --}}
        <div id='drawing-list-section' class="col m3 s12">
            <h2 class='fredericka big-text center-align'>Saved Drawings</h2>
            <ul id="drawing-list">
                {{#each drawings}}
                <li class='list-item' data-id="{{this.dataValues.id}}" data-title="{{this.dataValues.title}}">
                    <span class='lobster'>{{this.dataValues.title}}</span>
                    <i class='fas fa-trash-alt delete-note right' data-id="{{this.dataValues.id}}"></i></a>
                </li>
                {{/each}}
            </ul>
        </div>

        {{!-- Canvas --}}
        <div id='canvas-section' class="col m9 s12">
            <h2 class='fredericka center-align big-text'>Canvas</h2>
            <h3 id='canvas-drawing-title' class='lobster center-align small-text'></h3>
            <canvas id="myCanvas"></canvas>
        </div>
    </div>
    {{/if}}

    {{!-- Buttons --}}
    <div class='row'>
        {{!-- Modal Trigger --}}
        <a data-target="modal1" id='saveButton'
            class="modal-trigger waves-effect waves-light btn col m2 offset-m3 s8 offset-s2"><i
                class="material-icons right" style='margin-right: 15px'>save</i>Save</a>
        <a id='clearButton' class="waves-effect waves-light btn col m2 offset-m2 s8 offset-s2"><i
                class="material-icons right" style='margin-right: 15px'>clear</i>Clear</a>
    </div>


</main>

{{!-- Sticky Footer --}}
